<Page x:Class="FireNet.UI.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:FireNet.UI.ViewModels"
      mc:Ignorable="d">

    <!-- LoginViewModel باید از XAML ساخته شود تا LoginPage همیشه ViewModel جدید داشته باشد -->
    <Page.DataContext>
        <vm:LoginViewModel/>
    </Page.DataContext>

    <Grid Background="#0E0E0E">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="FireNet"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="44"
                   FontWeight="SemiBold"
                   Margin="0,30,0,0"/>

        <!-- FORM -->
        <StackPanel Grid.Row="1"
                    Width="340"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,40,0,0"
                    Orientation="Vertical">

            <!-- USERNAME -->
            <Grid Margin="0,10">

                <Grid.Resources>
                    <Storyboard x:Key="PlaceholderUp">
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         To="-16" Duration="0:0:0.18"/>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         To="0.4" Duration="0:0:0.18"/>
                    </Storyboard>

                    <Storyboard x:Key="PlaceholderDown">
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         To="0" Duration="0:0:0.18"/>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         To="0.7" Duration="0:0:0.18"/>
                    </Storyboard>
                </Grid.Resources>

                <TextBox x:Name="UsernameBox"
                         Height="46"
                         FontSize="16"
                         Padding="10,12,10,6"
                         Foreground="White"
                         Background="#141414"
                         BorderBrush="#333"
                         BorderThickness="1.2"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock x:Name="UsernamePlaceholder"
                           Text="Username"
                           Foreground="#777"
                           FontSize="16"
                           Margin="14,12,0,0"
                           VerticalAlignment="Top"
                           IsHitTestVisible="False">
                    <TextBlock.RenderTransform>
                        <TranslateTransform/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>

                            <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=UsernameBox}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource PlaceholderUp}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsKeyboardFocused, ElementName=UsernameBox}" Value="False"/>
                                    <Condition Binding="{Binding Text, ElementName=UsernameBox}" Value=""/>
                                </MultiDataTrigger.Conditions>
                                <MultiDataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource PlaceholderDown}"/>
                                </MultiDataTrigger.EnterActions>
                            </MultiDataTrigger>

                        </Style.Triggers>
                    </Style>
                </Grid.Style>

            </Grid>

            <!-- PASSWORD -->
            <Grid Margin="0,10">

                <Grid.Resources>
                    <Storyboard x:Key="PassUp">
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         To="-16" Duration="0:0:0.18"/>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         To="0.4" Duration="0:0:0.18"/>
                    </Storyboard>

                    <Storyboard x:Key="PassDown">
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                         To="0" Duration="0:0:0.18"/>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         To="0.7" Duration="0:0:0.18"/>
                    </Storyboard>
                </Grid.Resources>

                <PasswordBox x:Name="PasswordInput"
                             Height="46"
                             FontSize="16"
                             Padding="10,12,10,6"
                             Background="#141414"
                             Foreground="White"
                             BorderBrush="#333"
                             BorderThickness="1.2"
                             PasswordChanged="PasswordInput_PasswordChanged"/>

                <TextBlock x:Name="PasswordPlaceholder"
                           Text="Password"
                           Foreground="#777"
                           FontSize="16"
                           Margin="14,12,0,0"
                           VerticalAlignment="Top"
                           IsHitTestVisible="False">
                    <TextBlock.RenderTransform>
                        <TranslateTransform/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>

                            <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=PasswordInput}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource PassUp}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsKeyboardFocused, ElementName=PasswordInput}" Value="False"/>
                                    <Condition Binding="{Binding Password, ElementName=PasswordInput}" Value=""/>
                                </MultiDataTrigger.Conditions>
                                <MultiDataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource PassDown}"/>
                                </MultiDataTrigger.EnterActions>
                            </MultiDataTrigger>

                        </Style.Triggers>
                    </Style>
                </Grid.Style>

            </Grid>

            <!-- LOGIN BUTTON -->
            <Button Content="Login"
                    Height="46"
                    Margin="0,25,0,0"
                    FontSize="18"
                    Foreground="Black"
                    Background="#FFD84D"
                    BorderBrush="#FFD84D"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding LoginCommand}"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#FF5555"
                       Margin="0,15,0,0"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"/>
        </StackPanel>
    </Grid>

</Page>
