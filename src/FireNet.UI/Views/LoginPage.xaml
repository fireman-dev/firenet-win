<Page x:Class="FireNet.UI.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Login">

    <Grid Background="#0F0F0F">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="FireNet"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="42"
                   FontWeight="Bold"/>

        <StackPanel Grid.Row="1"
                    Width="340"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,40,0,0">

            <!-- USERNAME -->
            <Grid Margin="0,10">
                <TextBox x:Name="UsernameBox"
                         Height="42"
                         FontSize="16"
                         Padding="10"
                         Foreground="White"
                         Background="#1A1A1A"
                         BorderBrush="#333"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Placeholder -->
                <TextBlock Text="Username"
                           Foreground="#777"
                           Margin="14,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Text, ElementName=UsernameBox}" Value=""/>
                                        <Condition Binding="{Binding IsKeyboardFocused, ElementName=UsernameBox}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- PASSWORD -->
            <Grid Margin="0,10">
                <PasswordBox x:Name="PasswordInput"
                             Height="42"
                             FontSize="16"
                             Padding="10"
                             Background="#1A1A1A"
                             BorderBrush="#333"/>

                <!-- Placeholder -->
                <TextBlock Text="Password"
                           Foreground="#777"
                           Margin="14,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=Password, ElementName=PasswordInput}" Value=""/>
                                        <Condition Binding="{Binding IsKeyboardFocused, ElementName=PasswordInput}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- LOGIN BUTTON -->
            <Button Content="Login"
                    Height="44"
                    Margin="0,20,0,0"
                    FontSize="18"
                    Command="{Binding LoginCommand}"/>

            <!-- ERROR -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#FF5555"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0,15,0,0"
                       Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"/>
        </StackPanel>
    </Grid>
</Page>
