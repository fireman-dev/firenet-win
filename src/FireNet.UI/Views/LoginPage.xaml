<Page x:Class="FireNet.UI.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Login">

    <Grid Background="#0F0F0F">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="FireNet"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="42"
                   FontWeight="Bold"/>

        <StackPanel Grid.Row="1"
                    Width="340"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,40,0,0">

            <!-- Username -->
            <TextBox Margin="0,10"
                     Height="42"
                     FontSize="16"
                     Padding="10"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Tag" Value="Username"/>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Text" Value="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Password -->
            <PasswordBox Margin="0,10"
                         Height="42"
                         FontSize="16"
                         Padding="10"
                         x:Name="PasswordBox"/>

            <!-- Login Button -->
            <Button Content="Login"
                    Height="44"
                    Margin="0,20,0,0"
                    FontSize="18"
                    Command="{Binding LoginCommand}"/>

            <!-- Error message -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#FF5555"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0,15,0,0"
                       Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"/>
        </StackPanel>
    </Grid>
</Page>
