<Page x:Class="FireNet.UI.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Width="420"
      Height="530"
      Background="{DynamicResource BackgroundBrush}">

    <Grid>

        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="50"/>
            <!-- Main content -->
            <RowDefinition Height="*"/>
            <!-- Footer (version) -->
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>


        <!-- ============================= -->
        <!-- HEADER (Settings Left / Logout Right) -->
        <!-- ============================= -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- SETTINGS ICON -->
            <Button Grid.Column="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding OpenSettingsCommand}">
                <Image Source="/Assets/Icons/settings.png"
                       Width="26" Height="26"/>
            </Button>

            <!-- TITLE -->
            <TextBlock Text="FireNet"
                       Grid.Column="1"
                       Foreground="{DynamicResource ForegroundBrush}"
                       FontSize="20"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <!-- LOGOUT ICON -->
            <Button Grid.Column="2"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding LogoutCommand}">
                <Image Source="/Assets/Icons/logout.png"
                       Width="26" Height="26"/>
            </Button>
        </Grid>


        <!-- ============================= -->
        <!-- MAIN CONTENT -->
        <!-- ============================= -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">

            <StackPanel HorizontalAlignment="Center"
                        Width="420"
                        Margin="0,20,0,0">


                <!-- ============================= -->
                <!-- TRAFFIC + REMAINING DAYS -->
                <!-- ============================= -->
                <TextBlock Text="{Binding TrafficInfo}"
                           Foreground="{DynamicResource ForegroundBrush}"
                           FontSize="16"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="{Binding ExpireInfo}"
                           Foreground="{DynamicResource ForegroundBrush}"
                           FontSize="15"
                           HorizontalAlignment="Center"
                           Opacity="0.8"/>


                <!-- ============================= -->
                <!-- CONNECT / DISCONNECT CIRCLE BUTTON -->
                <!-- ============================= -->
                <Button Command="{Binding ConnectCommand}"
                        Width="150" Height="150"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse x:Name="Circle"
                                         Width="150"
                                         Height="150"
                                         Fill="#202020"
                                         Stroke="#555"
                                         StrokeThickness="3"
                                         RenderOptions.EdgeMode="Aliased"/>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ConnectionStatus}"
                                               Foreground="#BBDDDDDD"
                                               FontSize="14"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ConnectButtonText}"
                                               Foreground="#FFD84D"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <ControlTemplate.Triggers>

                                <!-- CONNECTED -->
                                <DataTrigger Binding="{Binding ConnectionStatus}" Value="Connected">
                                    <Setter TargetName="Circle" Property="Fill" Value="#0A332E"/>
                                    <Setter TargetName="Circle" Property="Stroke" Value="#21D4A8"/>
                                </DataTrigger>

                                <!-- DISCONNECTED -->
                                <DataTrigger Binding="{Binding ConnectionStatus}" Value="Disconnected">
                                    <Setter TargetName="Circle" Property="Fill" Value="#252525"/>
                                    <Setter TargetName="Circle" Property="Stroke" Value="#444"/>
                                </DataTrigger>

                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Circle" Property="StrokeThickness" Value="4"/>
                                </Trigger>

                                <!-- Pressed -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Circle" Property="StrokeThickness" Value="5"/>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <!-- ============================= -->
                <!--  PING TEXT  (CLICKABLE) -->
                <!-- ============================= -->
                <TextBlock Text="{Binding PingText}"
                           Foreground="{DynamicResource ForegroundBrush}"
                           FontSize="15"
                           Cursor="Hand"
                           HorizontalAlignment="Center">
                    <TextBlock.InputBindings>
                        <MouseBinding MouseAction="LeftClick"
                                      Command="{Binding RefreshPingCommand}"/>
                    </TextBlock.InputBindings>
                </TextBlock>


                <!-- ============================= -->
                <!-- LIST OF PROFILES (REMARK ONLY) -->
                <!-- ============================= -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Disabled"
                            Margin="0,20,0,0">
                    <ItemsControl ItemsSource="{Binding Profiles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin" Value="15,0,15,0"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            Cursor="Hand"
                                            Margin="0"
                                            MouseLeftButtonUp="{Binding DataContext.SelectProfileCommand, 
                                                    RelativeSource={RelativeSource AncestorType=Page}, 
                                                    Mode=OneWay, 
                                                    UpdateSourceTrigger=PropertyChanged}"
                                            Tag="{Binding}">

                                    <!-- دایره -->
                                    <Border Width="{Binding Size}"
                                            Height="{Binding Size}"
                                            CornerRadius="{Binding Size, Converter={StaticResource HalfConverter}}"
                                            BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"
                                            BorderThickness="3"
                                            Background="{DynamicResource CardBrush}"
                                            HorizontalAlignment="Center">

                                        <Ellipse Fill="{DynamicResource ForegroundBrush}"/>
                                    </Border>

                                    <!-- متن زیر دایره -->
                                    <TextBlock Text="{Binding Remark}"
                                            Foreground="{DynamicResource ForegroundBrush}"
                                            FontSize="13"
                                            HorizontalAlignment="Center"
                                            Margin="0,6,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>


                <!-- ============================= -->
                <!-- ERROR MESSAGE -->
                <!-- ============================= -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#FF5555"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Visibility="{Binding HasError,
                                        Converter={StaticResource BoolToVisibility}}"
                           Margin="0,10,0,0"/>

            </StackPanel>

        </ScrollViewer>


        <!-- ============================= -->
        <!-- VERSION BOTTOM CENTER -->
        <!-- ============================= -->
        <TextBlock Grid.Row="2"
                   Text="{Binding AppVersion}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource ForegroundBrush}"
                   Opacity="0.6"
                   FontSize="13"/>
    </Grid>

</Page>
