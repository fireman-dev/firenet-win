<Page x:Class="FireNet.UI.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Home">

    <Grid Background="#111">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="FireNet"
                   Foreground="White"
                   FontSize="38"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="25,0"/>

        <!-- Main Content -->
        <StackPanel Grid.Row="1"
                    Margin="30"
                    VerticalAlignment="Top">

            <!-- Connection Status -->
            <TextBlock Text="{Binding ConnectionStatus}"
                       Foreground="White"
                       FontSize="16"
                       Margin="0,0,0,20"/>

            <!-- Traffic -->
            <TextBlock Text="{Binding TrafficInfo}"
                       Foreground="White"
                       FontSize="14"/>

            <!-- Expire -->
            <TextBlock Text="{Binding ExpireInfo}"
                       Foreground="#BBBBBB"
                       FontSize="14"
                       Margin="0,10,0,20"/>

            <!-- Server Selection -->
            <ComboBox ItemsSource="{Binding Profiles}"
                      SelectedItem="{Binding SelectedProfile}"
                      Height="40"
                      FontSize="16"
                      Margin="0,10"/>

            <!-- Connect / Disconnect -->
            <Button Height="48"
                    Margin="0,20,0,0"
                    FontSize="18"
                    Content="{Binding ConnectButtonText}"
                    Command="{Binding ConnectCommand}"/>

            <!-- Error message -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#FF4444"
                       Margin="0,25,0,0"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Visibility="{Binding HasError,
                                    Converter={StaticResource BoolToVisibility}}"/>

        </StackPanel>
    </Grid>
</Page>
