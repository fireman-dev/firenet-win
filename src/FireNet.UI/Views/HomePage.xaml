<Page x:Class="FireNet.UI.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Width="420"
      Height="530"
      Background="{DynamicResource BackgroundBrush}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <!-- ============================= -->
        <!-- HEADER -->
        <!-- ============================= -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Settings -->
            <Button Grid.Column="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding OpenSettingsCommand}">
                <Image Source="/Assets/Icons/settings.png"
                       Width="26" Height="26"/>
            </Button>

            <!-- Title -->
            <TextBlock Grid.Column="1"
                       Text="FireNet"
                       Foreground="{DynamicResource ForegroundBrush}"
                       FontSize="20"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

            <!-- Logout -->
            <Button Grid.Column="2"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding LogoutCommand}">
                <Image Source="/Assets/Icons/logout.png"
                       Width="26" Height="26"/>
            </Button>
        </Grid>


        <!-- ============================= -->
        <!-- MAIN CONTENT -->
        <!-- ============================= -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">

            <StackPanel Width="420"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center">

                <!-- Traffic -->
                <TextBlock Text="{Binding TrafficInfo}"
                           Foreground="{DynamicResource ForegroundBrush}"
                           FontSize="16"
                           HorizontalAlignment="Center"/>

                <!-- Expire -->
                <TextBlock Text="{Binding ExpireInfo}"
                           Foreground="{DynamicResource ForegroundBrush}"
                           FontSize="15"
                           Opacity="0.8"
                           HorizontalAlignment="Center"/>

                <!-- CONNECT BUTTON -->
                <Button Command="{Binding ConnectCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Width="150" Height="150">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>

                                <Ellipse x:Name="Circle"
                                         Width="150"
                                         Height="150"
                                         Fill="#202020"
                                         Stroke="#555"
                                         StrokeThickness="3"/>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ConnectionStatus}"
                                               Foreground="#BBDDDDDD"
                                               FontSize="14"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ConnectButtonText}"
                                               Foreground="#FFD84D"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                            </Grid>

                            <ControlTemplate.Triggers>

                                <!-- Connected -->
                                <DataTrigger Binding="{Binding ConnectionStatus}" Value="Connected">
                                    <Setter TargetName="Circle" Property="Stroke" Value="#21D4A8"/>
                                    <Setter TargetName="Circle" Property="Fill" Value="#0A332E"/>
                                </DataTrigger>

                                <!-- Disconnected -->
                                <DataTrigger Binding="{Binding ConnectionStatus}" Value="Disconnected">
                                    <Setter TargetName="Circle" Property="Stroke" Value="#444"/>
                                    <Setter TargetName="Circle" Property="Fill" Value="#252525"/>
                                </DataTrigger>

                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Circle" Property="StrokeThickness" Value="4"/>
                                </Trigger>

                                <!-- Pressed -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Circle" Property="StrokeThickness" Value="5"/>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                </Button>


                <!-- Ping -->
                <TextBlock Text="{Binding PingText}"
                           Foreground="{DynamicResource ForegroundBrush}"
                           FontSize="15"
                           HorizontalAlignment="Center"
                           Cursor="Hand">
                    <TextBlock.InputBindings>
                        <MouseBinding MouseAction="LeftClick"
                                      Command="{Binding RefreshPingCommand}"/>
                    </TextBlock.InputBindings>
                </TextBlock>


                <!-- ============================= -->
                <!-- PROFILES LIST -->
                <!-- ============================= -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled"
                              Margin="0,20,0,0">

                    <ItemsControl ItemsSource="{Binding Profiles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin" Value="15,0,15,0"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            Cursor="Hand"
                                            MouseLeftButtonUp="{Binding DataContext.SelectProfileCommand,
                                                RelativeSource={RelativeSource AncestorType=Page}}"
                                            Tag="{Binding}">

                                    <!-- PROFILE CIRCLE -->
                                    <Border Width="{Binding Size}"
                                            Height="{Binding Size}"
                                            CornerRadius="{Binding Size, Converter={StaticResource HalfConverter}}"
                                            BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"
                                            BorderThickness="3"
                                            Background="{DynamicResource CardBrush}"
                                            HorizontalAlignment="Center">

                                        <Ellipse Fill="{DynamicResource ForegroundBrush}"/>
                                    </Border>

                                    <!-- REMARK -->
                                    <TextBlock Text="{Binding Remark}"
                                               Foreground="{DynamicResource ForegroundBrush}"
                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               Margin="0,6,0,0"/>

                                </StackPanel>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                </ScrollViewer>


                <!-- Error -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#FF5555"
                           FontSize="14"
                           Margin="0,10,0,0"
                           Visibility="{Binding HasError,
                               Converter={StaticResource BoolToVisibility}}"/>

            </StackPanel>

        </ScrollViewer>


        <!-- VERSION -->
        <TextBlock Grid.Row="2"
                   Text="{Binding AppVersion}"
                   Foreground="{DynamicResource ForegroundBrush}"
                   FontSize="13"
                   Opacity="0.6"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

    </Grid>

</Page>
