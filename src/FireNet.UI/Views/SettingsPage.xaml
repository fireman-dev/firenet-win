<Page x:Class="FireNet.UI.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Settings">

    <Grid Background="#111" Padding="30">

        <StackPanel VerticalAlignment="Top">

            <!-- Title -->
            <TextBlock Text="Settings"
                       Foreground="White"
                       FontSize="34"
                       FontWeight="Bold"/>

            <!-- Version -->
            <TextBlock Text="{Binding VersionInfo}"
                       Foreground="LightGray"
                       FontSize="16"
                       Margin="0,20,0,20"/>

            <!-- FCM Token -->
            <TextBox Text="{Binding FcmToken}"
                     Height="40"
                     FontSize="14"
                     Margin="0,5"
                     Padding="10"
                     PlaceholderText="Enter FCM Token"/>

            <Button Content="Save FCM Token"
                    Height="40"
                    Margin="0,10"
                    Command="{Binding SaveFcmCommand}"/>

            <!-- Logout -->
            <Button Content="Logout"
                    Background="#CC3333"
                    Foreground="White"
                    Height="40"
                    Margin="0,20"
                    Command="{Binding LogoutCommand}"/>

            <!-- LOGS -->
            <TextBlock Text="Xray Logs"
                       Margin="0,30,0,10"
                       Foreground="White"
                       FontSize="18"/>

            <ScrollViewer Height="260" Background="#222">
                <TextBlock Text="{Binding LogsText}"
                           Foreground="LightGray"
                           FontSize="13"
                           TextWrapping="Wrap"/>
            </ScrollViewer>

        </StackPanel>
    </Grid>
</Page>
