<Page x:Class="FireNet.UI.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Settings">

    <Grid Background="{DynamicResource PageBackground}" Margin="30">

        <StackPanel VerticalAlignment="Top" Width="420">

            <!-- HEADER -->
            <TextBlock Text="Settings"
                       Foreground="{DynamicResource TitleText}"
                       FontSize="34"
                       FontWeight="Bold"/>

            <TextBlock Text="{Binding VersionInfo}"
                       Foreground="{DynamicResource SecondaryText}"
                       FontSize="16"
                       Margin="0,20,0,20"/>

            <!-- THEME SWITCH -->
            <TextBlock Text="Theme"
                       Foreground="{DynamicResource TitleText}"
                       FontSize="18"
                       Margin="0,10,0,5"/>

            <ComboBox ItemsSource="{Binding ThemeOptions}"
                      SelectedItem="{Binding SelectedTheme}"
                      Height="38"
                      FontSize="14"
                      Background="{DynamicResource InputBackground}"
                      Foreground="{DynamicResource InputText}"
                      Margin="0,5"/>

            <Button Content="Apply Theme"
                    Height="40"
                    Margin="0,10"
                    Command="{Binding ApplyThemeCommand}"
                    Background="{DynamicResource Accent}"
                    Foreground="White"/>

            <!-- FCM Token -->
            <TextBlock Text="FCM Token"
                       Foreground="{DynamicResource TitleText}"
                       FontSize="18"
                       Margin="0,25,0,5"/>

            <TextBox Text="{Binding FcmToken}"
                     Height="40"
                     FontSize="14"
                     Margin="0,5"
                     Padding="10"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource InputText}"/>

            <Button Content="Save FCM Token"
                    Height="40"
                    Margin="0,10"
                    Command="{Binding SaveFcmCommand}"
                    Background="{DynamicResource Accent}"
                    Foreground="White"/>

            <!-- LOGOUT -->
            <Button Content="Logout"
                    Background="#CC3333"
                    Foreground="White"
                    Height="40"
                    Margin="0,30,0,0"
                    Command="{Binding LogoutCommand}"/>

        </StackPanel>
    </Grid>
</Page>
